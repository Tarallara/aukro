<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aukro.Pages.ItemCreatePage"
             Title="ItemCreatePage">
    <StackLayout Padding="20">
        <Label Text="Create Item" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

        <Entry Placeholder="Name" x:Name="ItemNameEntry" />
         <Entry Placeholder="Description" x:Name="DescriptionEntry" />
        <Entry Placeholder="Price" x:Name="ItemPriceEntry" />
        <Picker x:Name="CategoryPicker"></Picker>
        <Button Text="Select Image" Clicked="OnSelectImageClicked" />
        <Image x:Name="ItemImage" WidthRequest="300" HeightRequest="300" />
        <Button Text="Create Item" Clicked="OnCreateItemClicked" />

    </StackLayout>
</ContentPage>